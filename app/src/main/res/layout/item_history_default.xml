<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.khsbs.trilogy.repository.entity.InterpretHistory" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:background="@android:color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_history_sourceLang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:text="@{item.sourceLang}"
                tools:text="영어"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/iv_source_to_target_arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_source_to_target"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/tv_history_sourceLang"
                app:layout_constraintBottom_toBottomOf="@id/tv_history_sourceLang"
                app:layout_constraintStart_toEndOf="@id/tv_history_sourceLang"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/appColor"
                android:textStyle="bold"
                android:text="@{item.targetLang}"
                tools:text="한국어"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/tv_history_sourceLang"
                app:layout_constraintBottom_toBottomOf="@id/tv_history_sourceLang"
                app:layout_constraintStart_toEndOf="@id/iv_source_to_target_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/history_text"
                android:textStyle="bold"
                android:text="@{item.inputText}"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="한국어"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/tv_history_sourceLang"
                app:layout_constraintEnd_toEndOf="@id/iv_history_expand"
                app:layout_constraintTop_toBottomOf="@id/tv_history_sourceLang"/>

            <ImageView
                android:id="@+id/iv_history_expand"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_history_expand"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
