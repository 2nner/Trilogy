<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.khsbs.trilogy.ui.main.InterpretViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_input_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:padding="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_text"
            android:textSize="20sp"
            android:textColor="@color/appColor"
            app:layout_constraintTop_toTopOf="@id/iv_go_back"
            app:layout_constraintBottom_toBottomOf="@id/iv_go_back"
            app:layout_constraintStart_toEndOf="@id/iv_go_back"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="@string/input_text"
            android:gravity="start"
            android:paddingStart="21dp"
            android:paddingEnd="21dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:inputType="text"
            android:imeOptions="actionSearch"
            app:layout_constraintTop_toBottomOf="@id/iv_go_back"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>