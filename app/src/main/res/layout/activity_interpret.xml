<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.khsbs.trilogy.ui.main.InterpretViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.InterpretActivity">

        <EditText
            android:id="@+id/et_inputText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@={viewModel.inputMessage}"
            android:hint="입력하세염"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_interpret"/>

        <Button
            android:id="@+id/btn_interpret"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="번역"
            android:onClick="@{() -> viewModel.interpret()}"
            app:layout_constraintTop_toTopOf="@id/et_inputText"
            app:layout_constraintBottom_toBottomOf="@id/et_inputText"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_papago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Papago 번역 결과"
            android:textColor="#3EAF0E"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_interpret"/>

        <TextView
            android:id="@+id/tv_resultPapago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.resultPapago}"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            tools:text="네이버 번역 결과"
            app:layout_constraintTop_toBottomOf="@id/txt_papago"/>

        <TextView
            android:id="@+id/txt_kakaoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kakaoi 번역 결과"
            android:textColor="#ffe812"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_resultPapago"/>

        <TextView
            android:id="@+id/tv_resultKakaoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.resultKakaoi}"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            tools:text="카카오i 번역 결과"
            app:layout_constraintTop_toBottomOf="@id/txt_kakaoi"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
